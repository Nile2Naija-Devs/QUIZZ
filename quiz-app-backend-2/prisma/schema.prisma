// The datasource block specifies the database provider and connection details
datasource db {
  provider = "postgresql"  // You can change this if you're using a different database (e.g., mysql)
  url      = env("DATABASE_URL")  // This reads the database connection URL from your .env file
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id        String   @id @default(dbgenerated("uuid_generate_v4()"))
  email     String   @unique
  password  String
  username  String
  role      String
  created_at DateTime? @default(now())
  results   results[] // Reverse relation for the `results` model
}

model leaderboard {
  id      String @id @default(dbgenerated("public.gen_random_uuid()"))
}

model quizzes {
  id          String   @id @default(dbgenerated("uuid_generate_v4()"))
  description String
  created_at  DateTime @default(now())
  results     results[] // Reverse relation for the `results` model
}

model results {
  id          String   @id @default(dbgenerated("uuid_generate_v4()"))
  user_id     String
  quiz_id     String
  user        users    @relation(fields: [user_id], references: [id])
  quiz        quizzes  @relation(fields: [quiz_id], references: [id])
}
